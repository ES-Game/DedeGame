<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_small_between_part_in_item"
    android:layout_marginEnd="@dimen/margin_small_between_part_in_item"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/size_icon_40dp"
        android:layout_height="@dimen/size_icon_40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/size_icon_58dp"
        android:layout_marginStart="@dimen/margin_between_part_in_item_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" >

        <TextView
            android:id="@+id/txtDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/size_text_small"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/size_text_small"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginTop="@dimen/margin_small_between_part_in_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDateTime" />

        <TextView
            android:id="@+id/txtContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/size_text_small"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginTop="@dimen/margin_small_between_part_in_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtName" />

        <TextView
            android:id="@+id/txtLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small_between_part_in_item"
            android:background="@drawable/bg_border_corner_black_button"
            android:fontFamily="@font/montserrat_regular"
            android:paddingStart="@dimen/margin_between_part_in_item_15dp"
            android:paddingTop="@dimen/margin_small_between_part_in_item"
            android:paddingEnd="@dimen/margin_between_part_in_item_15dp"
            android:paddingBottom="@dimen/margin_small_between_part_in_item"
            android:textColor="@color/black"
            android:textSize="@dimen/size_text_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtContent" />

        <TextView
            android:id="@+id/txtFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small_between_part_in_item"
            android:layout_marginStart="@dimen/margin_small_between_part_in_item"
            android:background="@drawable/bg_corner_orange_button"
            android:paddingStart="@dimen/margin_between_part_in_item_15dp"
            android:paddingTop="@dimen/margin_small_between_part_in_item"
            android:paddingEnd="@dimen/margin_between_part_in_item_15dp"
            android:paddingBottom="@dimen/margin_small_between_part_in_item"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/white"
            android:textSize="@dimen/size_text_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtLike"
            app:layout_constraintTop_toBottomOf="@+id/txtContent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>